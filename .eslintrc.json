{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": 2,
        "strict": 0,
        "template-curly-spacing": "off",
        "indent": [
            "error",
            2,
            {
                "ignoredNodes": [
                    "TemplateLiteral"
                ]
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "semi": [
            "error",
            "never"
        ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "no-trailing-spaces": "off",
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "generator-star-spacing": [
            "off"
        ],
        "no-unused-vars": "error",
        "no-var": "error",
        "no-useless-escape": "off",
        "curly": "off",
        "valid-typeof": "off"
    }
}